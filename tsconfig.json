{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/suman-types/dts",
      "node_modules/suman-types/dts/*",
      "node_modules/suman-types"
    ],
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": [
      "es2015",
      "es2016"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "test",
    "node_modules"
  ]
}
